@model Forms.Models.Task

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{

    <div class="form-group">
        <label for="Name">Name</label>
        <input name="Name" type="text" class="form-control control" placeholder="Your Name">

    </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <input name="Description" type="text" class="form-control control" placeholder="Task description">

        </div>

        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(x => x.Completion)
                Is the Task completed
            </label>
         </div>

        <p>
            <button  type="submit" class="btn btn-primary btn-lg" value="Create" >Submit Task</button>
        </p>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
